@model NewPortfolio.Models.ArticlePostVM

@{
    ViewData["Title"] = "Komentář příspěvku";
}
<section class="section-index-articles">
    <div class="section-hero">

<div class="row">
    <div class="col-md-4">
                <form asp-action="Create" method="post" class="account-profile-board">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post" class="control-label"></label>
                <textarea asp-for="Post" class="text-area" ></textarea>
                <span asp-validation-for="Post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticleId" hidden class="control-label"></label>
                <input asp-for="ArticleId" hidden/>
            </div>                  
            <div class="form-group">
                <input type="submit" value="Vytvořit" class="btn-use btn-succes" />
                 <a asp-action="Index" class="btn-use btn-edit">Zpět</a>
            </div>
        </form>
    </div>
</div>




</div>
</section>