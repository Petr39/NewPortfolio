@model NewPortfolio.Models.BuildPost

@{
    ViewData["Title"] = "Create";
}
<section class="section-index-articles">
    <div class="section-hero">
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BuildName" class="control-label"></label>
                <input asp-for="BuildName" class="form-control" />
                <span asp-validation-for="BuildName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Vytvořit" class="btn-use btn-succes" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-use btn-edit">Zpět</a>
</div>

</div>
</section>