@model IEnumerable<NewPortfolio.Models.BuildPost>



@{
    ViewData["Title"] = "Index";
}
<section class="section-index-articles">
    <div class="section-hero">
<p>
    <a asp-action="Create" class="btn-use btn-succes">Vytvořit nový build</a>
</p>
<table class="table">
    <thead>
                <tr class="articles-tr">
            <th>
                Název buildu
            </th>
        
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
                    <tr articles-tr-down>
            <td>
                <a asp-controller="Builds" asp-action="Index" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.BuildName)</a>
            </td>
                @if(User.IsInRole("admin")){
            <td>
                 <a asp-action="Delete" asp-route-id="@item.Id" class="btn-use btn-danger">Smazat</a>
                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn-use btn-edit">Editovat</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
<a asp-action="Index" asp-controller="Home" class="btn-use btn-edit">Domů</a>
</div>
</section>