@model NewPortfolio.Models.Item



@{
    ViewData["Title"] = "Edit";
}


<section class="section-index-articles">
    <div class="section-hero">
<hr />
<h1>Editace věcí</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameItem" class="control-label"></label>
                <input asp-for="NameItem" class="form-control" />
                <span asp-validation-for="NameItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PathItem" class="control-label"></label>
                <input asp-for="PathItem" class="form-control" />
                <span asp-validation-for="PathItem" class="text-danger"></span>
            </div>
                 
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</div>
</section>



