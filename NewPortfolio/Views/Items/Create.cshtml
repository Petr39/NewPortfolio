@model NewPortfolio.Models.Item

@{
    ViewData["Title"] = "Vytvoření věci";
}

<section class="section-index-articles">
    <div class="section-hero">
    
        <div>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NameItem" class="control-label"></label>
                    <input asp-for="NameItem" class="form-control" />
                    <span asp-validation-for="NameItem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionItem"></label>
                    <textarea asp-for="DescriptionItem" class="text-area"></textarea>
                    <span asp-validation-for="DescriptionItem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <img src=@ViewData["img"] class="avatar" />
                    </div>
                  <label for="">Vyberte Avatara velikosti max 4kB</label>
                  <input type="file" name="file" asp-for="PathItem" />            
                  <span asp-validation-for="PathItem" class="text-danger"></span>
                </div>
                <div>
                   
                </div>
                <div class="form-group">
                    <input type="submit" value="Vytvořit" class="btn-use btn-succes" />
                    <a asp-action="Index" class="btn-use btn-edit">Zpět</a>
                </div>
            </form>
        </div>
    </div>
</section>