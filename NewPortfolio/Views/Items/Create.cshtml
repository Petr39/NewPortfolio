                        <input type="file" name="file" asp-for="PathItem" />            
                <span asp-validation-for="PathItem" class="text-danger"></span>
            </div>
            <div>
               
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


}

else
{
   <p>Nemáte přístup</p>
}


