@model NewPortfolio.Models.Build

@{
    ViewData["Title"] = "Edit";
}
<section class="section-index-articles">
    <div class="section-hero">
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildPostId" class="control-label"></label>
                <select asp-for="BuildPostId" class="form-control" asp-items="ViewBag.BuildPostId"></select>
                <span asp-validation-for="BuildPostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn-use btn-succes" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="BuildPosts" asp-action="Index" class="btn-use btn-edit">Zpět na buildy</a>
</div>
</div>
</section>
