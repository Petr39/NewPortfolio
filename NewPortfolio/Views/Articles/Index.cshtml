@model IEnumerable<NewPortfolio.Models.Article>
@using X.PagedList;
@using X.PagedList.Mvc.Core;



@{
    ViewData["Title"] = "Seznam článků";
}
<section class="section-index-articles">
    <div class="section-hero">
        <h5>Články o hře Diablo 4</h5>
        <form asp-controller="Articles" asp-action="Index" method="get">
            <div>
                <select id="inputSearch" name="searchby">
                    <option selected value="">Vyhledat podle...</option>
                    <option value="title">Titulek</option>
                    <option value="description">Popisek</option>
                </select>
                <input name="searchfor" id="inputSearch"/>
                <button class="btn-use btn-edit" type="submit" id="inputSearch">Najít</button>
            <a class="btn-use btn-edit" type="button" asp-controller="Articles" asp-action="Index">Smazat</a>
            </div>
        </form>
        <div  class="articles">
            <table id="tblData" width="100%">
                <thead>
                    <tr class="articles-tr">
                        <th class="articles-th">
                            Popisek
                        </th>
                        <th id="hidden" class="articles-th">
                            Titulek
                        </th>
                        <th class="articles-th">
                            Vytvořil
                        </th>
                        <th id="hidden" class="articles-th-article">
                            Obsah
                        </th>
                        @if (this.Context.User.IsInRole("admin"))
                        {
                            <th class="articles-th-btn">
                           </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr class="articles-tr-down">
                         <th>
                             <a class="text-decoration" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem=>item.Description)</a>
                         </th>
                         <th id="hidden" class="articles-th">
                            @Html.DisplayFor(model=>item.Title)
                        </th>
                         <th>
                           <div class="account-view">
                               <div class="account-img">
                                  <img src="@item.ApplicationUser.Path" width="40" height="40" />
                               </div>
                               <div class="account-content">
                                   <div>
                                       <div class="account-nickname">
                                          <a asp-action="AccountView" asp-controller="Account" asp-route-id="@item.ApplicationUser.Id"><h6>@item.ApplicationUser.NickName</h6></a>
                                          <p><img class="img-comment" src="/images/email.png" /></p>
                                       </div>
                                   </div>
                                   <div class="pf">
                                       <a asp-action="ViewSendCredit" asp-controller="Account" asp-route-id="@item.AppUserId">@item.ApplicationUser.Credit
                                         <img src="/images/euro.png" />
                                       </a>
                                   </div>
                                   <div>
                                      <p>Příspěvky:@item.ApplicationUser.CountPost</p>
                                       <p>Registrován:@item.ApplicationUser.DateOfRegister.ToString("dd.MM.yyyy")</p>
                                   </div>
                               </div>
                           </div>
                        </th>
                            <th id="hidden">
                            @Html.DisplayFor(modelItem=>item.Content)
                        </th>
               
                        @if (this.Context.User.IsInRole("admin"))
                        {
                         <th id="btn-hidden" class="nav-list-button">
                           <a class="btn-use btn-danger width-btn" asp-action="Delete" asp-route-id="@item.Id"><i class="ri-chat-delete-line"></i></a>
                           <a class="btn-use btn-edit width-btn" asp-action="Edit" asp-route-id="@item.Id"><i class="ri-pencil-line"></i></a>
                         </th>
                        }
                    </tr>
                    }
               </tbody>
               </table>
            <a class="btn-use btn-succes" asp-action="Create"> <i class="ri-file-add-line"></i> Vytvořit nový</a>
            <a asp-action="Index" asp-controller="Home" class="btn-use btn-edit width-btn"> <i class="ri-home-line"></i> Domů</a>
        </div>
       <div class="pagination">
           @Html.PagedListPager((IPagedList) Model, page => Url.Action("Index", new {page,
           searchfor = Context.Request.Query["searchfor"], searchby = Context.Request.Query["searchby"]}),
           new X.PagedList.Web.Common.PagedListRenderOptions {
               LiElementClasses = new string [] {"page-item"},
               PageClasses = new string [] {"page-link"}
           })
       </div>
    </div>
</section>
