@model IEnumerable<NewPortfolio.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<section class="section-index">

    <div class="section-hero">
<p>
    <a class="btn-use btn-succes" asp-action="Create">Vytvořit nový</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
      
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
              
            @if (this.Context.User.IsInRole("admin"))
            {
               <a class="btn-use btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
               <a class="btn-use btn-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            }

               <a class="btn-use btn-detail" asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</section>