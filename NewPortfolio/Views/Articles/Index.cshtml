@model IEnumerable<NewPortfolio.Models.Article>

@using X.PagedList;
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Index";

}



<section class="section-index">

    <div class="section-hero">


        <form asp-controller="Articles" asp-action="Index" method="get">
            <div>
                <select id="inputSearch" name="searchby">
                    <option selected value="">Najít..</option>
                    <option value="title">Titulek</option>
                    <option value="description">Popisek</option>
                </select>
                <input name="searchfor" id="inputSearch"/>
                <button class="btn-use btn-edit" type="submit" id="inputSearch">Najít</button>
            <a class="btn-use btn-succes" type="button" asp-controller="Articles" asp-action="Index">Smazat</a>
            </div>
        </form>


        <div  class="articles">
            <table id="tblData">
                <thead>
                    <tr class="articles-tr">
                        <th width="130px">
                            Popisek
                        </th>
                        <th width="130px">
                            Titulek
                        </th>
                        
                        <th width="130px">
                            Vytvořil
                        </th>
                        <th width="130px">
                            Avatar
                        </th>




                       
                        @if (this.Context.User.IsInRole("admin"))
                        {
                          <th width="120px">
                           </th>
                        }
                       

                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr class="articles-tr-down">
                            <th>
                                <a  asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem=>item.Description)</a>
                        </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Title)
                        </th>
                         <th >
                               @Html.DisplayFor(modelItem => item.NickName)
                        </th>
                        <th>
                            <img src="@item.ApplicationUser.Path" width="40" height="40" asp-append-version="true">
                        </th>
                        @if (this.Context.User.IsInRole("admin"))
                        {
                            <th id="btn-hidden" class="nav-list-button">
                               <a class="btn-use btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                               <a class="btn-use btn-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            </th>
                        }
                    </tr>
                    }
               </tbody>
               </table>
            <a class="btn-use btn-succes" asp-action="Create">Vytvořit nový</a>
        </div>
        
       <div class="pagination">


        @Html.PagedListPager((IPagedList) Model, page => Url.Action("Index", new {page,
        searchfor = Context.Request.Query["searchfor"], searchby = Context.Request.Query["searchby"]}),
        
        new X.PagedList.Web.Common.PagedListRenderOptions {
            LiElementClasses = new string [] {"page-item"},
            PageClasses = new string [] {"page-link"}
        })
     
       </div>

    </div>
</section>
