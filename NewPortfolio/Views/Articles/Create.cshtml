@model NewPortfolio.Models.Article

@{
    ViewData["Title"] = "Create";
}

@section Scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.0.3/tinymce.min.js"></script>
    <script src="@Url.Content("~/js/initTinyMCE.js")"></script>
}


<section class="section-index-tiny">
    <div class="section-hero">


        <div class="col-md-4">
            <form class="form" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Titulek</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Popisek</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Obsah</label>
                    <textarea id="Content" asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-button">
                    <button type="submit" class="btn-use btn-succes">Uložit</button>
                    <a class="btn-use btn-detail" asp-action="Index">Zpět na seznam</a>
                </div>
            </form>
        </div>


    </div>
</section>