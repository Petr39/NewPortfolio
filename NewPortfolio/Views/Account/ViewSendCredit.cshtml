@model TransferViewModel
@{
    ViewData["title"] = "Poslat kredity";
}

<section class="section-index-articles">
    <div class="section-hero">
        <form asp-action="ViewSendCredit" method="post">
            <div class="form-group">
               <label asp-for="SourceUserId" hidden class="control-label"></label>
                <input asp-for="SourceUserId" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="TargetUserId" hidden class="control-label"></label>
                <input asp-for="TargetUserId" hidden/>           
            </div>
            <div>
                <label for="amount">Částka:</label>
                @Html.TextBoxFor(model => model.Amount)
            </div>
            <button type="submit" class="btn-use btn-succes">Poslat kredit</button>
        </form>
</div>
</section>