@model NewPortfolio.Models.AppUser



@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Administrace účtu";
   
}



<section class="section-show-table">
    <div class="section-hero">
        <h2 class="site-heading">Administrace účtu</h2>
        <p>
         Vaše uživatelské jméno:   @User.Identity.Name

      

        </p>
        <div class="d-flex flex-wrap gap-3 mb-3">
            <a asp-action="LogOut" class="btn-use btn-edit">Odhlásit se</a>
        </div>
        @if (this.Context.User.IsInRole("admin"))
        {
           
             <form  asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
               <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NickName"></label>
                    <input asp-for="NickName" placeholder=" Zadejte přezdívku" class="form-control" />
                    <span asp-validation-for="NickName" class="text-danger"></span>
                </div>
                <div>
                    <input type="file" name="file" asp-for="ImagePath" />
                    <label asp-for="ImagePath"></label>
                </div>
                <button type="submit" class="btn-use btn-succes">Změnit přezdívku za 1000 kreditů</button>
            </form>

            <div>
                <a asp-action="Create" asp-controller="Articles" class="btn-use btn-succes">Přidat článek</a>
                <a asp-action="Index" asp-controller="Articles" class="btn-use btn-detail">Seznam článků</a>
            </div>
        }
        else
        {
             <form  asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
              <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NickName"></label>
                    <input asp-for="NickName" placeholder="Zadejte přezdívku" class="form-control" />
                    <span asp-validation-for="NickName" class="text-danger"></span>
                </div>
                <div>
                    <input type="file" name="file" asp-for="ImagePath" />
                    <label asp-for="ImagePath"></label>
                </div>
                <button type="submit" class="btn-use btn-succes">Změnit za 1000 kreditů</button>
            </form>
        }


        
    </div>
</section>